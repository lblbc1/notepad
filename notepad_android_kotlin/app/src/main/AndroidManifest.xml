<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.hsp.notepad">

    <application
        android:name="cn.hsp.notepad.HspApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="cn.hsp.notepad.ui.NoteListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.hsp.notepad.ui.AddNoteActivity"
            android:theme="@style/noTitleTheme" />
        <activity
            android:name="cn.hsp.notepad.ui.EditNoteActivity"
            android:theme="@style/noTitleTheme" />
    </application>

</manifest>